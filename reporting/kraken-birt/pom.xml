<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.krakenapps</groupId>
		<artifactId>kraken-reporting-pom</artifactId>
		<version>1.0.0</version>
	</parent>
	<artifactId>kraken-birt</artifactId>
	<version>1.1.0</version>
	<packaging>bundle</packaging>
	<name>Kraken BIRT</name>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>org.krakenapps.report.birt</Bundle-SymbolicName>
						<Export-Package>org.krakenapps.report,org.eclipse.birt.report.model.api;version=${project.version}</Export-Package>
						<Import-Package> org.krakenapps.api,
							!javax.servlet,
							!javax.sql.rowset.serial,
							!javax.xml.datatype,
							!org.apache.commons.lang,
							!org.apache.xmlbeans,
							!org.eclipse.birt.chart.reportitem,
							!org.eclipse.birt.data.engine.olap.data.api,
							!org.eclipse.birt.report.item.crosstab.core.script.internal,
							!org.eclipse.core.resources,
							!org.eclipse.core.runtime,
							!org.eclipse.core.runtime.content,
							!org.w3c.dom.stylesheets,
							javax.xml.datatype,
							*
						</Import-Package>
						<Private-Package>
							org.krakenapps.report.birt,
							!org.eclipse.birt.*;-split-package:=merge-last
						</Private-Package>
						<Embed-Dependency>!org.apache.felix.*,*;scope=compile|runtime</Embed-Dependency>
					</instructions>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-ipojo-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>ipojo-bundle</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
