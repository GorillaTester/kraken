<ipojo xmlns:filter="org.krakenapps.filter.FilterHandler">
	<component classname="org.krakenapps.syslog.SyslogReceiver"
		immediate="true" architecture="true">
		<provides />
		<filter:filter />
	</component>
	<component classname="org.krakenapps.syslog.SyslogSender"
		immediate="true" architecture="true">
		<provides />
		<filter:filter />
	</component>
	<component classname="org.krakenapps.syslog.SyslogTracer"
		immediate="true" architecture="true">
		<provides />
		<filter:filter />
	</component>
	<component className="org.krakenapps.syslog.impl.SyslogScriptFactory"
		name="syslog-script-factory" immediate="true" factory="false">
		<provides>
			<property name="alias" type="string" value="syslog" />
		</provides>
	</component>

	<instance component="syslog-script-factory" />
	<instance component="syslog-server-registry" />
</ipojo>